{
	"name": "ulbitv-frontend",
	"version": "1.0.0",
	"description": "Учебный проект по курсу от Ulbi TV",
	"main": "index.js",
	"scripts": {
		"start": "webpack serve --env port=3000",
		"start:vite": "vite",
		"start:dev": "concurrently \"npm run start\" \"npm run start:dev:server\"",
		"start:dev:vite": "concurrently \"npm run start:vite\" \"npm run start:dev:server\"",
		"start:dev:server": "node ./json-server/index.js",
		"build:prod": "webpack --env mode=production",
		"build:dev": "webpack --env mode=development",
		"prettier": "npx prettier --write \"**/*.{ts,tsx,json}\"",
		"lint:ts": "eslint \"**/*.{ts,tsx}\"",
		"lint:ts:fix": "eslint \"**/*.{ts,tsx}\" --fix",
		"lint:scss": "npx stylelint \"**/*.scss\"",
		"lint:scss:fix": "npx stylelint \"**/*.scss\" --fix",
		"test:unit": "jest --config ./config/jest/jest.config.ts",
		"test:ui": "npx loki test",
		"test:ui:ok": "npx loki approve",
		"test:ui:ci": "npx loki --requireReference --reactUri file:./storybook-static",
		"test:ui:json": "node ./scripts/generate-visual-json-report.js",
		"test:ui:html": "reg-cli --from .loki/report.json --report .loki/report.html",
		"test:ui:report": "npm run test:ui:json && npm run test:ui:html",
		"test:e2e": "cypress open",
		"storybook": "storybook dev -p 6006 -c ./config/storybook",
		"storybook:build": "storybook build -c ./config/storybook",
		"prepare": "husky install",
		"postinstall": "ts-node ./scripts/clearCache/clearCache.ts",
		"scripts:generate-slice": "node ./scripts/createSlice/index.js",
		"scripts:update-imports": "ts-node ./scripts/refactoring/updateImports.ts",
		"scripts:update-src-imports": "ts-node ./scripts/refactoring/updateSrcImports.ts",
		"scripts:create-public-api": "ts-node ./scripts/createPublicApi/createPublicApiForSharedUi-v2.ts",
		"scripts:create-readme": "ts-node ./scripts/createReadme/createReadmeForSlices.ts",
		"scripts:remove-feature": "ts-node ./scripts/refactoring/remove-feature.ts"
	},
	"keywords": [
		"ulbitv"
	],
	"author": "Pereverzev Daniil",
	"license": "ISC",
	"devDependencies": {
		"@babel/core": "^7.17.5",
		"@babel/plugin-transform-runtime": "^7.22.9",
		"@babel/plugin-transform-typescript": "^7.22.9",
		"@babel/preset-env": "^7.16.11",
		"@babel/preset-react": "^7.16.7",
		"@babel/preset-typescript": "^7.16.7",
		"@pmmmwh/react-refresh-webpack-plugin": "^0.5.10",
		"@storybook/addon-essentials": "^7.1.0",
		"@storybook/addon-interactions": "^7.1.0",
		"@storybook/addon-links": "^7.1.0",
		"@storybook/addon-queryparams": "^6.2.9",
		"@storybook/blocks": "^7.1.0",
		"@storybook/react": "^7.1.0",
		"@storybook/react-webpack5": "^7.1.0",
		"@storybook/testing-library": "^0.2.0",
		"@svgr/webpack": "^6.2.1",
		"@testing-library/jest-dom": "^5.16.2",
		"@testing-library/react": "^14.0.0",
		"@testing-library/user-event": "^14.4.3",
		"@types/circular-dependency-plugin": "^5.0.5",
		"@types/jest": "^27.4.1",
		"@types/node": "^17.0.21",
		"@types/react": "^18.2.15",
		"@types/react-dom": "^18.2.7",
		"@types/react-router-dom": "^5.3.3",
		"@types/webpack": "^5.28.0",
		"@types/webpack-bundle-analyzer": "^4.4.1",
		"@types/webpack-dev-server": "^4.7.2",
		"@typescript-eslint/eslint-plugin": "^5.5.0",
		"@typescript-eslint/parser": "^5.5.0",
		"@vitejs/plugin-react": "^4.0.3",
		"babel-loader": "^8.2.3",
		"babel-plugin-i18next-extract": "^0.8.3",
		"copy-webpack-plugin": "^11.0.0",
		"cypress": "^12.17.2",
		"eslint": "^8.45.0",
		"eslint-config-airbnb": "^19.0.4",
		"eslint-config-prettier": "^8.8.0",
		"eslint-config-standard-with-typescript": "^36.1.0",
		"eslint-plugin-cypress": "^2.13.3",
		"eslint-plugin-i18next": "^5.2.1",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-jsx-a11y": "^6.5.1",
		"eslint-plugin-n": "^15.7.0",
		"eslint-plugin-promise": "^6.1.1",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-button-has-type": "^0.0.3",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-ulbitv-fsd": "^0.0.13",
		"eslint-plugin-unused-imports": "^3.0.0",
		"file-loader": "^6.2.0",
		"fork-ts-checker-webpack-plugin": "^8.0.0",
		"html-webpack-plugin": "^5.5.0",
		"husky": "^8.0.0",
		"identity-obj-proxy": "^3.0.0",
		"isomorphic-fetch": "^3.0.0",
		"jest": "^27.5.1",
		"json-server": "^0.17.3",
		"lint-staged": "^13.2.3",
		"loki": "^0.32.0",
		"mini-css-extract-plugin": "^2.5.3",
		"react-refresh": "^0.12.0",
		"reg-cli": "^0.17.7",
		"regenerator-runtime": "^0.13.9",
		"storybook": "^7.1.0",
		"storybook-addon-mock": "^4.1.0",
		"storybook-addon-themes": "^6.1.0",
		"stylelint": "^14.15.0",
		"stylelint-config-standard-scss": "^6.1.0",
		"ts-loader": "^9.4.1",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.5",
		"vite": "^4.4.4",
		"vite-plugin-checker": "^0.6.1",
		"vite-plugin-svgr": "^3.2.0",
		"webpack": "^5.69.1",
		"webpack-bundle-analyzer": "^4.5.0",
		"webpack-cli": "^4.10.0",
		"webpack-dev-server": "^4.7.4"
	},
	"dependencies": {
		"@headlessui/react": "^1.7.15",
		"@react-spring/web": "^9.7.3",
		"@reduxjs/toolkit": "^1.9.5",
		"@types/react-virtualized": "^9.21.22",
		"@use-gesture/react": "^10.2.27",
		"axios": "^1.4.0",
		"browserslist": "^4.21.9",
		"circular-dependency-plugin": "^5.2.2",
		"concurrently": "^8.2.0",
		"css-loader": "^6.7.1",
		"i18next": "^23.2.11",
		"i18next-browser-languagedetector": "^6.1.3",
		"i18next-http-backend": "^1.3.2",
		"jest-html-reporters": "^3.1.4",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-i18next": "^13.0.2",
		"react-redux": "^8.1.1",
		"react-router-dom": "^6.2.1",
		"react-virtuoso": "^4.3.11",
		"sass": "^1.55.0",
		"sass-loader": "^13.1.0",
		"style-loader": "^3.3.1",
		"ts-morph": "^19.0.0",
		"ts-node-dev": "^2.0.0"
	},
	"lint-staged": {
		"**/*.{ts,tsx}": [
			"prettier --list-different",
			"eslint"
		]
	},
	"loki": {
		"looks-same": {
			"ignoreCaret": true
		},
		"configurations": {
			"chrome.laptop": {
				"target": "chrome.docker",
				"width": 1366,
				"height": 768,
				"deviceScaleFactor": 1,
				"mobile": false
			},
			"chrome.iphone7": {
				"target": "chrome.docker",
				"preset": "iPhone 7"
			}
		}
	}
}
